@model ECARTemplate.Models.Empleado
@{
    ViewData["Title"] = "Editar Empleado";
}
<a asp-action="Index" class="btn btn-secondary ms-2">Volver a Empleados</a>
<br />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Editar Empleado</h1>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Empleado</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CodigoEmpleadoEcar" class="control-label">Código Empleado</label>
                                    <input asp-for="CodigoEmpleadoEcar" class="form-control" />
                                    <span asp-validation-for="CodigoEmpleadoEcar" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Fecha" class="control-label">Fecha de creación</label>
                                    <input asp-for="Fecha" class="form-control" readonly />
                                    <span asp-validation-for="Fecha" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NombreEmpleado" class="control-label">Nombre Empleado</label>
                                    <input asp-for="NombreEmpleado" class="form-control" />
                                    <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Cargo" class="control-label">Cargo</label>
                                    <input asp-for="Cargo" class="form-control" />
                                    <span asp-validation-for="Cargo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Area" class="control-label">Área</label>
                                    <input asp-for="Area" class="form-control" />
                                    <span asp-validation-for="Area" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="SubArea" class="control-label">Sub Área</label>
                                    <input asp-for="SubArea" class="form-control" />
                                    <span asp-validation-for="SubArea" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirmaBpm" class="control-label">Firma BPM</label>
                                    <input asp-for="FirmaBpm" class="form-control" />
                                    <span asp-validation-for="FirmaBpm" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Nota" class="control-label">Nota</label>
                            <textarea asp-for="Nota" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Nota" class="text-danger"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Estado" class="control-label">Estado</label>
                                    <input asp-for="Estado" class="form-control" readonly/>
                                    <span asp-validation-for="Estado" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UsuarioRegistro" class="control-label">Usuario de Registro</label>
                                    <input asp-for="UsuarioRegistro" class="form-control" readonly />
                                    <span asp-validation-for="UsuarioRegistro" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary ms-2">Guardar</button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}