@model IEnumerable<ECARTemplate.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
    var currentSearchString = ViewData["CurrentFilter"] as string;
    var currentEstadoFilter = ViewData["EstadoFilter"] as string;
    var currentCargoFilter = ViewData["CargoFilter"] as string;
    var currentAreaFilter = ViewData["AreaFilter"] as string;
}

<div class="text-center">
    <h1 class="display-4">Empleados<span></span> <img src="~/iconos/empleados.png" alt="Empleados" style="width: 40px; height: 40px;"></h1>
</div>

<p class="mx-5 mb-3 no-print">
    <a asp-action="Create" class="btn btn-success btn-sm">Crear Nuevo</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mx-5" role="alert">
        @Html.Raw(TempData["SuccessMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mx-5" role="alert">
        @Html.Raw(TempData["ErrorMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show mx-5" role="alert">
        @Html.Raw(TempData["InfoMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="modal fade" id="confirmacionModal" tabindex="-1" aria-labelledby="confirmacionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmacionModalLabel">Confirmación</h5>
                <button type="button" class="btn-close" id="closeModalBtn" aria-label="Close">
                    <span aria-hidden="true" style="font-size: 1.5rem; line-height: 1;">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body-text">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelarAccionBtn">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmarAccionBtn">Sí, continuar</button>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3 no-print mx-5">
    <div class="card-header bg-primary text-white">
        <h6 class="mb-0">Filtro</h6>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label for="searchString" class="form-label-sm">Búsqueda</label>
                    <input type="text" name="searchString" id="searchString" class="form-control form-control-sm" placeholder="Código o Nombre" value="@currentSearchString">
                </div>
                <div class="col-md-3">
                    <label for="cargoFilter" class="form-label-sm">Cargo</label>
                    <select name="cargoFilter" id="cargoFilter" class="form-control form-control-sm">
                        <option value="">Todos</option>
                        @foreach (var cargo in ViewBag.Cargos)
                        {
                            <option value="@cargo" selected="@(cargo == currentCargoFilter ? "selected" : null)">@cargo</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="areaFilter" class="form-label-sm">Área</label>
                    <select name="areaFilter" id="areaFilter" class="form-control form-control-sm">
                        <option value="">Todas</option>
                        @foreach (var area in ViewBag.Areas)
                        {
                            <option value="@area" selected="@(area == currentAreaFilter ? "selected" : null)">@area</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="estadoFilter" class="form-label-sm">Estado</label>
                    <select name="estadoFilter" id="estadoFilter" class="form-control form-control-sm">
                        <option value="">Todos</option>
                        <option value="Activo" selected="@("Activo" == currentEstadoFilter ? "selected" : null)">Activo</option>
                        <option value="Inactivo" selected="@("Inactivo" == currentEstadoFilter ? "selected" : null)">Inactivo</option>
                    </select>
                </div>
                <div class="col-md-12 text-end mt-2">
                    <button type="submit" class="btn btn-primary btn-sm me-1">Filtrar</button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Limpiar</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mx-5 mb-3">
    <p class="text-muted total-registros-counter">Mostrando @ViewData["TotalRegistros"] registros.</p>
</div>

<div class="table-container mx-5">
    <table class="table table-bordered table-striped table-compact">
        <thead class="sticky-header">
            <tr>
                <th style="width: 8%;">
                    <h4>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["EstadoSortParam"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-estadoFilter="@ViewData["EstadoFilter"]"
                           asp-route-cargoFilter="@ViewData["CargoFilter"]"
                           asp-route-areaFilter="@ViewData["AreaFilter"]">
                            Estado <i class="fas fa-sort @(ViewData["EstadoSortParam"] == "Estado" ? "fa-sort-up" : (ViewData["EstadoSortParam"] == "estado_desc" ? "fa-sort-down" : ""))"></i>
                        </a>
                    </h4>
                </th>
                <th style="width: 8%;">
                    <h4>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CodigoSortParam"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-estadoFilter="@ViewData["EstadoFilter"]"
                           asp-route-cargoFilter="@ViewData["CargoFilter"]"
                           asp-route-areaFilter="@ViewData["AreaFilter"]">
                            Código <i class="fas fa-sort @(ViewData["CodigoSortParam"] == "Codigo" ? "fa-sort-up" : (ViewData["CodigoSortParam"] == "codigo_desc" ? "fa-sort-down" : ""))"></i>
                        </a>
                    </h4>
                </th>
                <th style="width: 22%;">
                    <h4>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NombreSortParam"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-estadoFilter="@ViewData["EstadoFilter"]"
                           asp-route-cargoFilter="@ViewData["CargoFilter"]"
                           asp-route-areaFilter="@ViewData["AreaFilter"]">
                            Nombre del Empleado <i class="fas fa-sort @(ViewData["NombreSortParam"] == "Nombre" ? "fa-sort-up" : (ViewData["NombreSortParam"] == "nombre_desc" ? "fa-sort-down" : ""))"></i>
                        </a>
                    </h4>
                </th>
                <th style="width: 20%;">
                    <h4>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CargoSortParam"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-estadoFilter="@ViewData["EstadoFilter"]"
                           asp-route-cargoFilter="@ViewData["CargoFilter"]"
                           asp-route-areaFilter="@ViewData["AreaFilter"]">
                            Cargo <i class="fas fa-sort @(ViewData["CargoSortParam"] == "Cargo" ? "fa-sort-up" : (ViewData["CargoSortParam"] == "cargo_desc" ? "fa-sort-down" : ""))"></i>
                        </a>
                    </h4>
                </th>
                <th style="width: 20%;">
                    <h4>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["AreaSortParam"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-estadoFilter="@ViewData["EstadoFilter"]"
                           asp-route-cargoFilter="@ViewData["CargoFilter"]"
                           asp-route-areaFilter="@ViewData["AreaFilter"]">
                            Área <i class="fas fa-sort @(ViewData["AreaSortParam"] == "Area" ? "fa-sort-up" : (ViewData["AreaSortParam"] == "area_desc" ? "fa-sort-down" : ""))"></i>
                        </a>
                    </h4>
                </th>
                <th>
                    <h4>Firma BPM</h4>
                </th>
                <th class="no-print" style="width: 25%;">
                    <h4>Acciones</h4>
                </th>
            </tr>
        </thead>
        <tbody id="tablaEmpleadosBody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Estado == "Activo")
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else if (item.Estado == "Inactivo")
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Desconocido</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoEmpleadoEcar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEmpleado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirmaBpm)
                    </td>
                    <td class="no-print text-nowrap">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Detalles</a>
                        @if (item.Estado == "Activo")
                        {
                            <form asp-action="Desactivar" asp-route-id="@item.Id" method="post" style="display:inline;" data-mensaje="¿Está seguro que desea inactivar este empleado? Esto afectará sus credenciales.">
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-secondary btn-xs" onclick="showConfirmModal(this, this.parentNode.getAttribute('data-mensaje'));">Inactivar</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activar" asp-route-id="@item.Id" method="post" style="display:inline;" data-mensaje="¿Está seguro que desea activar este empleado?">
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-success btn-xs" onclick="showConfirmModal(this, this.parentNode.getAttribute('data-mensaje'));">Activar</button>
                            </form>
                        }
                        <a asp-action="Create" asp-controller="Credenciales" asp-route-empleadoId="@item.Id" class="btn btn-info btn-xs">Crear Credencial</a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7">No se encontraron resultados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Estilos para impresión */
    @@media print {
        .no-print {
            display: none !important;
        }
    }

    /* Estilos para el contenedor de la tabla */
    .table-container {
        max-height: 500px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }

    /* Estilos para el encabezado fijo */
    .sticky-header {
        position: sticky;
        top: 0;
        background-color: #fff;
        z-index: 10;
    }

    /* Estilos para que las filas sean más angostas */
    .table-compact th,
    .table-compact td {
        padding-top: 0.25rem;
        padding-bottom: 0.25rem;
    }

    /* Evita que los botones se envuelvan a la siguiente línea */
    .table td.text-nowrap {
        white-space: nowrap;
    }

    /* Estilo para botones extra-pequeños */
    .btn.btn-xs {
        padding: 0.1rem 0.25rem;
        font-size: 0.75rem;
        line-height: 1;
    }
</style>

@section Scripts {
    <script>
        var formToSubmit = null;
        var confirmacionModalInstance = null;

        function getConfirmacionModal() {
            if (!confirmacionModalInstance) {
                confirmacionModalInstance = new bootstrap.Modal(document.getElementById('confirmacionModal'));
            }
            return confirmacionModalInstance;
        }

        function showConfirmModal(button, message) {
            formToSubmit = button.closest('form');
            const modal = getConfirmacionModal();

            document.getElementById('modal-body-text').innerHTML = message;

            const confirmarBtn = document.getElementById('confirmarAccionBtn');
            confirmarBtn.onclick = function() {
                if (formToSubmit) {
                    formToSubmit.submit();
                }
                modal.hide();
            };

            const cancelarBtn = document.getElementById('cancelarAccionBtn');
            const closeModalBtn = document.getElementById('closeModalBtn');

            cancelarBtn.onclick = function() {
                modal.hide();
            };

            closeModalBtn.onclick = function() {
                modal.hide();
            };

            modal.show();
        }
    </script>
}