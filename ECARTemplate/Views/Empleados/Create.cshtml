@model ECARTemplate.Models.Empleado

@{
    ViewData["Title"] = "Crear Empleado";
}
<a asp-action="Index" class="btn btn-secondary ms-2">Volver a Empleados</a>
<br />
<div class="container">
    <h1 class="text-center mb-4">Crear Empleado</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Nuevo Empleado</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Fecha" class="control-label"></label>
                            @* IMPORTANTE: Agregamos id="FechaCreacionInput" para que el JS pueda seleccionarlo *@
                            <input asp-for="Fecha" class="form-control" id="FechaCreacionInput" type="date" readonly />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CodigoEmpleadoEcar" class="control-label">Código de Empleado</label>
                            <input asp-for="CodigoEmpleadoEcar" placeholder="Ejemplo T2030" class="form-control" />
                            <span asp-validation-for="CodigoEmpleadoEcar" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NombreEmpleado" class="control-label">Nombre Empleado</label>
                            <input asp-for="NombreEmpleado" placeholder="En mayuscúlas" class="form-control" />
                            <span asp-validation-for="NombreEmpleado" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cargo" class="control-label"></label>
                            <select asp-for="Cargo" class="form-control">
                                <option value="">Selecciona un Cargo</option>
                                <option value="Oficios Varios - Mantenimiento">Oficios Varios - Mantenimiento</option>
                                <option value="Oficios Varios - Área Elaboración">Oficios Varios - Área Elaboración</option>
                                <option value="Oficios Varios - Líder de Área">Oficios Varios - Líder de Área</option>
                                <option value="Inspector de Gestión Integral">Inspector de Gestión Integral</option>
                                <option value="Auxiliar de Gestión Integral Apoyo Planta">Auxiliar de Gestión Integral Apoyo Planta</option>
                                <option value="Analista de Transferencia y Mantenimiento de Fórmulas">Analista de Transferencia y Mantenimiento de Fórmulas</option>
                                <option value="Auxiliar Innovación y Desarrollo">Auxiliar Innovación y Desarrollo</option>
                                <option value="Supervisor de Mantenimiento">Supervisor de Mantenimiento</option>
                                <option value="Coordinador Mantenimiento">Coordinador Mantenimiento</option>
                                <option value="Analista Junior de Validaciones">Analista Junior de Validaciones</option>
                                <option value="OperadorOficios Varios - Acondicionamiento">OperadorOficios Varios - Acondicionamiento</option>
                                <option value="Analista Senior de Validaciones">Analista Senior de Validaciones</option>
                                <option value="Auxiliar de Validación de Software">Auxiliar de Validación de Software</option>
                                <option value="Gestor de entrenamientos y calificación de personal">Gestor de entrenamientos y calificación de personal</option>
                                <option value="Supervisor de Producción">Supervisor de Producción</option>
                                <option value="Supervisor de Almacén Materia Prima">Supervisor de Almacén Materia Prima</option>
                                <option value="Auxiliar de Producción">Auxiliar de Producción</option>
                                <option value="Analista de Validaciones">Analista de Validaciones</option>
                                <option value="Analista de Innovación y Desarrollo">Analista de Innovación y Desarrollo</option>
                                <option value="Coordinador de Innovación y Desarrollo">Coordinador de Innovación y Desarrollo</option>
                                <option value="Analista de Producción">Analista de Producción</option>
                                <option value="Analista de Productividad">Analista de Productividad</option>
                                <option value="Jefe de PlantaCoordinador de Producción">Jefe de PlantaCoordinador de Producción</option>
                                <option value="Gerente de Producción">Gerente de Producción</option>
                                <option value="Analista Documental Innovación y Desarrollo">Analista Documental Innovación y Desarrollo</option>
                                <option value="Auxiliar de Validaciones">Auxiliar de Validaciones</option>
                                <option value="Coordinador de Gestión Integral">Coordinador de Gestión Integral</option>
                                <option value="Analista de Metrología">Analista de Metrología</option>
                                <option value="Analista Máster de Validaciones">Analista Máster de Validaciones</option>
                                <option value="Auxiliar Control Calidad">Auxiliar Control Calidad</option>
                                <option value="Analista Control Calidad Microbiología">Analista Control Calidad Microbiología</option>
                                <option value="Oficios VariosOtro">Oficios VariosOtro</option>
                            </select>
                            <span asp-validation-for="Cargo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Area" class="control-label">Área</label>
                            <select asp-for="Area" class="form-control">
                                <option value="">Selecciona un Área</option>
                                <option value="Mantenimiento">Mantenimiento</option>
                                <option value="Producción">Producción</option>
                                <option value="Gestion Integral">Gestion Integral</option>
                                <option value="Innovación Y Desarrollo">Innovación Y Desarrollo</option>
                                <option value="Validaciones">Validaciones</option>
                                <option value="Gestion Humana">Gestion Humana</option>
                                <option value="Materias Primas">Materias Primas</option>
                                <option value="Otro">Otro</option>
                            </select>
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SubArea" class="control-label">Sub área</label>
                            <input asp-for="SubArea" class="form-control" />
                            <span asp-validation-for="SubArea" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirmaBpm" class="control-label">Firma BPM</label>
                            <input asp-for="FirmaBpm" class="form-control" value="" />
                            <span asp-validation-for="FirmaBpm" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Nota" class="control-label"></label>
                            <textarea asp-for="Nota" class="form-control">N/A</textarea>
                            <span asp-validation-for="Nota" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Estado" class="control-label"></label>
                            <input asp-for="Estado" class="form-control" value="Activo" readonly />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label hidden asp-for="UsuarioRegistro" class="control-label">Usuario de registro</label>
                            <input hidden asp-for="UsuarioRegistro" class="form-control" readonly value="@User.Identity.Name" />
                            <span asp-validation-for="UsuarioRegistro" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-success ms-2">Crear</button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Script para la Firma BPM (ya existente)
            const nombreInput = document.querySelector("input[name='NombreEmpleado']");
            const firmaInput = document.querySelector("input[name='FirmaBpm']");

            nombreInput.addEventListener("input", function () {
                const valor = nombreInput.value.trim().toLowerCase();

                if (valor.length === 0) {
                    firmaInput.value = "";
                    return;
                }

                const partes = valor.split(/\s+/);
                if (partes.length < 2) {
                    firmaInput.value = partes[0]; // solo nombre
                    return;
                }

                const primerNombre = partes[0];
                const posiblesApellidos = partes.slice(1);

                let inicialesApellidos = "";

                if (posiblesApellidos.length >= 2) {
                    // Toma los dos últimos como apellidos
                    const primerApellido = posiblesApellidos[posiblesApellidos.length - 2];
                    const segundoApellido = posiblesApellidos[posiblesApellidos.length - 1];
                    inicialesApellidos = primerApellido[0] + segundoApellido[0];
                } else if (posiblesApellidos.length === 1) { // Asegura que solo hay un apellido
                    // Solo un apellido
                    inicialesApellidos = posiblesApellidos[0][0];
                } else {
                    inicialesApellidos = ""; // No hay apellidos
                }


                firmaInput.value = primerNombre + inicialesApellidos;
            });

            // --- Script para la Fecha de Creación ---
            const fechaInput = document.getElementById("FechaCreacionInput");

            // Función para formatear la fecha a YYYY-MM-DD
            function formatearFecha(date) {
                const year = date.getFullYear();
                const month = (date.getMonth() + 1).toString().padStart(2, '0'); // Meses son 0-indexados
                const day = date.getDate().toString().padStart(2, '0');
                return `${year}-${month}-${day}`;
            }

            // Establecer la fecha actual al cargar la página
            if (fechaInput) { // Asegúrate de que el input exista
                const today = new Date();
                fechaInput.value = formatearFecha(today);
            }
            // --- Fin Script para la Fecha de Creación ---
        });
    </script>
}