@model IEnumerable<ECARTemplate.Models.Credencial>

@{
    ViewData["Title"] = "Credenciales";
}

<div class="text-center">
    <h1 class="display-4">Credenciales</h1>
</div>
<p class="mx-5 mb-3">
    <a class="btn btn-success btn-sm" asp-action="Create">Crear Nuevo</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mx-5" role="alert">
        @Html.Raw(TempData["SuccessMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mx-5" role="alert">
        @Html.Raw(TempData["ErrorMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info alert-dismissible fade show mx-5" role="alert">
        @Html.Raw(TempData["InfoMessage"])
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="modal fade" id="confirmacionModal" tabindex="-1" aria-labelledby="confirmacionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmacionModalLabel">Confirmación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modal-body-text">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmarAccionBtn">Sí, continuar</button>
            </div>
        </div>
    </div>
</div>

<div class="card mb-3 no-print mx-5">
    <div class="card-header bg-primary text-white">
        <h6 class="mb-0">Filtro Avanzado</h6>
    </div>
    <div class="card-body py-2">
        <form asp-action="Index" method="get">
            <div class="row gx-2 align-items-end">
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="fechaYHoraDesdeFiltro" class="form-label-sm">Fecha Desde:</label>
                        <input type="date" class="form-control form-control-sm" id="fechaYHoraDesdeFiltro" name="fechaYHoraDesdeFiltro" value="@((ViewBag.FechaYHoraDesdeFiltro as DateTime?)?.ToString("yyyy-MM-dd") ?? "")" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="nombreUsuarioFiltro" class="form-label-sm">Nombre Empleado:</label>
                        <input type="text" class="form-control form-control-sm" id="nombreUsuarioFiltro" name="nombreUsuarioFiltro" value="@((string)ViewBag.NombreUsuarioFiltro ?? "")" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="codigoUsuarioEcarFiltro" class="form-label-sm">Código Empleado:</label>
                        <input type="text" class="form-control form-control-sm" id="codigoUsuarioEcarFiltro" name="codigoUsuarioEcarFiltro" value="@((string)ViewBag.CodigoUsuarioEcarFiltro ?? "")" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="codigoEquipoFiltro" class="form-label-sm">Código Equipo:</label>
                        <input type="text" class="form-control form-control-sm" id="codigoEquipoFiltro" name="codigoEquipoFiltro" value="@((string)ViewBag.CodigoEquipoFiltro ?? "")" />
                    </div>
                </div>
            </div>
            <div class="row gx-2 align-items-end">
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="fechaYHoraHastaFiltro" class="form-label-sm">Fecha Hasta:</label>
                        <input type="date" class="form-control form-control-sm" id="fechaYHoraHastaFiltro" name="fechaYHoraHastaFiltro" value="@((ViewBag.FechaYHoraHastaFiltro as DateTime?)?.ToString("yyyy-MM-dd") ?? "")" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="perfilFiltro" class="form-label-sm">Perfil:</label>
                        <input type="text" class="form-control form-control-sm" id="perfilFiltro" name="perfilFiltro" value="@((string)ViewBag.PerfilFiltro ?? "")" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="usuarioRegistroFiltro" class="form-label-sm">Usuario que Registró:</label>
                        <input type="text" class="form-control form-control-sm" id="usuarioRegistroFiltro" name="usuarioRegistroFiltro" value="@((string)ViewBag.UsuarioRegistroFiltro ?? "")" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group mb-2">
                        <label for="estadoFiltro">Estado:</label>
                        <select class="form-control" id="estadoFiltro" name="estadoFiltro">
                            <option value="">Todos</option>
                            <option value="Activo" selected="@(((string)ViewBag.EstadoFiltro ?? "") == "Activo")">Activo</option>
                            <option value="Inactivo" selected="@(((string)ViewBag.EstadoFiltro ?? "") == "Inactivo")">Inactivo</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row gx-2 align-items-end">
                <div class="col-md-9 text-start">
                    <div class="form-group mt-2">
                        <button type="submit" class="btn btn-primary btn-sm">Filtrar</button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm ms-2">Limpiar Filtros</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mx-5 mb-3 d-flex justify-content-between align-items-center">
    <p class="text-muted total-registros-counter mb-0">Mostrando @ViewData["TotalRegistros"] registros.</p>
    <a asp-action="Index" asp-route-retirosPendientes="true" class="btn btn-warning btn-sm">Retiros Pendientes</a>
</div>

<div class="table-container mx-5">
    <table class="table table-bordered table-striped table-compact">
        <thead class="sticky-header">
            <tr>
                <th style="width: 10%;">
                    <h4 class="text-sm">Estado</h4>
                </th>
                <th style="width: 5%;">
                    <h4 class="text-sm">Código Equipo</h4>
                </th>
                <th style="width: 5%;">
                    <h4 class="text-sm">Código Empleado</h4>
                </th>
                <th>
                    <h4 class="text-sm">Nombre Empleado</h4>
                </th>
                <th>
                    <h4 class="text-sm">Usuario</h4>
                </th>
                <th>
                    <h4 class="text-sm">
                        <span>Contraseña</span>
                        <i id="toggle-password" class="fas fa-eye-slash" style="cursor: pointer; margin-left: 5px;"></i>
                    </h4>
                </th>
                <th class="no-print">
                    <h4 class="text-sm">Acciones</h4>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Estado == "Activo")
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else if (item.Estado == "Inactivo")
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Desconocido</span>
                        }
                    </td>
                    <td class="text-truncate" style="max-width: 50px;">
                        @Html.DisplayFor(modelItem => item.CodigoEquipo)
                    </td>
                    <td class="text-truncate" style="max-width: 50px;">
                        @Html.DisplayFor(modelItem => item.CodigoUsuarioEcar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreUsuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        <span class="password-cell" data-original-password="@item.Contrasena">
                            ••••••
                        </span>
                    </td>
                    <td class="no-print text-nowrap">
                        <a asp-action="Clonar" asp-route-id="@item.Id" class="btn btn-info btn-xs">Clonar</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Detalles</a>
                        @if (item.Estado == "Activo")
                        {
                            <form asp-action="Desactivar" asp-route-id="@item.Id" method="post" style="display:inline;" data-mensaje="¿Está seguro de inactivar la credencial?">
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-secondary btn-xs" onclick="showConfirmModal(this, this.parentNode.getAttribute('data-mensaje'));">Inactivar</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activar" asp-route-id="@item.Id" method="post" style="display:inline;" data-mensaje="¿Está seguro de activar la credencial?">
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-success btn-xs" onclick="showConfirmModal(this, this.parentNode.getAttribute('data-mensaje'));">Activar</button>
                            </form>
                        }
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7">No se encontraron resultados.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* Estilos para ocultar la contraseña por defecto */
    .password-cell {
        cursor: pointer;
        font-family: monospace;
        letter-spacing: 2px;
    }

    /* Estilos para el contenedor de la tabla (restante de tu código) */
    .table-container {
        max-height: 500px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }

    .sticky-header {
        position: sticky;
        top: 0;
        background-color: #f8f9fa; /* Color de fondo para el encabezado */
        z-index: 10;
        border-bottom: 2px solid #dee2e6; /* Separador del encabezado */
    }

    .table-compact th,
    .table-compact td {
        padding-top: 0.25rem;
        padding-bottom: 0.25rem;
        font-size: 0.8rem;
    }

    .btn.btn-xs {
        padding: 0.1rem 0.25rem;
        font-size: 0.75rem;
        line-height: 1;
    }
    /* Estilos para la impresión */
    @@media print {
        .no-print {
            display: none !important;
        }
    }

    .text-sm {
        font-size: 0.9rem; /* Tamaño de fuente más pequeño para el encabezado */
    }
</style>

@section Scripts {
    <script>
        var formToSubmit = null;
        var confirmacionModalInstance = null;

        function getConfirmacionModal() {
            if (!confirmacionModalInstance) {
                confirmacionModalInstance = new bootstrap.Modal(document.getElementById('confirmacionModal'));
            }
            return confirmacionModalInstance;
        }

        function showConfirmModal(button, message) {
            formToSubmit = button.closest('form');
            const modal = getConfirmacionModal();

            // Reemplaza el contenido del modal body
            document.getElementById('modal-body-text').innerHTML = message;

            // Asocia el evento click al botón de confirmar
            const confirmarBtn = document.getElementById('confirmarAccionBtn');
            confirmarBtn.onclick = function() {
                if (formToSubmit) {
                    formToSubmit.submit();
                }
                modal.hide();
            };

            // Asocia el evento click a los botones de cancelar y cerrar
            const cancelarBtn = document.getElementById('confirmacionModal').querySelector('[data-bs-dismiss="modal"]');
            const closeModalBtn = document.getElementById('confirmacionModal').querySelector('.btn-close');

            cancelarBtn.onclick = function() {
                modal.hide();
            };

            closeModalBtn.onclick = function() {
                modal.hide();
            };

            modal.show();
        }

        // Lógica para mostrar/ocultar contraseña
        $(document).ready(function() {
            let isPasswordVisible = false;

            $('#toggle-password').on('click', function() {
                isPasswordVisible = !isPasswordVisible;
                if (isPasswordVisible) {
                    $(this).removeClass('fa-eye-slash').addClass('fa-eye');
                    $('.password-cell').each(function() {
                        const originalPassword = $(this).data('original-password');
                        $(this).text(originalPassword);
                    });
                } else {
                    $(this).removeClass('fa-eye').addClass('fa-eye-slash');
                    $('.password-cell').text('••••••');
                }
            });

            $(document).on('mouseenter', '.password-cell', function() {
                if (!isPasswordVisible) {
                    const originalPassword = $(this).data('original-password');
                    $(this).text(originalPassword);
                }
            }).on('mouseleave', '.password-cell', function() {
                if (!isPasswordVisible) {
                    $(this).text('••••••');
                }
            });
        });
    </script>
}