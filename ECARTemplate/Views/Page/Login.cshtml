@model ECARTemplate.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}
@using System.Security.Claims
                @if (User.Identity.IsAuthenticated)
                {
<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-md-6">
            <div class="card shadow rounded-lg p-4">


                <h2 class="text-center mb-4">Sesión Iniciada</h2>
                
                    <div class="alert alert-success" role="alert">
                        <H6>Usuario activo: @User.Identity.Name.</H6>
                    </div>

                    <form class="form-inline text-center" method="post" asp-controller="Page" asp-action="Logout">
                        <button type="submit" class="nav-link btn btn-link text-left">
                            <i class="nav-link-icon fal fa-power-off"></i>
                            <span class="nav-link-text " data-i18n="nav.utilities">Cerrar Sesión</span> 
                        </button>
                    </form>
            </div>
        </div>
        <div class="col-md-6 d-flex justify-content-end align-items-center">
            <img src="~/img/logo-big.png" alt="@Settings.App WebApp" aria-roledescription="logo" class="img-fluid" style="max-height: 250px;">
        </div>
    </div>
</div>
}
                
                else
                {

    

<div class="container h-100">
    <div class="row align-items-center h-100">
        <div class="col-md-6">
            <div class="card shadow rounded-lg p-4">
                

                <h2 class="text-center mb-4">Iniciar Sesión</h2>
                <form id="js-login" method="post">
                    <div class="form-group">
                        <label class="form-label" for="codigousuario">Usuario</label>
                        <input type="text" id="codigousuario" class="form-control form-control-lg" asp-for="Usuario" placeholder="Ingresa tu Usuario" required>
                        <span asp-validation-for="Usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="password">Contraseña</label>
                        <input type="password" id="password" class="form-control form-control-lg" asp-for="ContrasenaUsuario" placeholder="Ingresa tu Contraseña" required>
                        <span asp-validation-for="ContrasenaUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group text-left">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="rememberme">
                            <label class="custom-control-label" for="rememberme">Recordarme</label>
                        </div>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-lg-12 pr-lg-1 my-2">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Iniciar Sesión</button>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </div>
        </div>
        <div class="col-md-6 d-flex justify-content-end align-items-center">
            <img src="~/img/logo-big.png" alt="@Settings.App WebApp" aria-roledescription="logo" class="img-fluid" style="max-height: 250px;">
        </div>
    </div>
</div>
}
@section Scripts {

}